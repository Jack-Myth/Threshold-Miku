		    textcolor=Root.SubLabel.Text
		}  
		
		AccountBalanceSeparatorStyle
		{
			textcolor=Root.SubLabel.Text
			font-family=basefont
			font-size=14
			font-weight=400
		    font-style=regular
			inset="0 -1 0 0"
		}
		
		new_label	
